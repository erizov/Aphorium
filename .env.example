# Aphorium Configuration
# Copy this file to .env and update with your values

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://postgres:postgres@localhost:5432/aphorium
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aphorium

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
# Will create logs/ directory if specified
LOG_FILE=logs/aphorium.log

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# WikiQuote Scraping Configuration
WIKIQUOTE_RU_BASE_URL=https://ru.wikiquote.org
WIKIQUOTE_EN_BASE_URL=https://en.wikiquote.org

# Delay between scraping requests (in seconds)
# Increase if you encounter rate limiting
# Recommended: 1.0-2.0 seconds
SCRAPE_DELAY=1.0
